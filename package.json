{
  "name": "@sprucelabs/heartwood-view-controllers",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "build/**/*"
  ],
  "main": "./build/index.js",
  "types": "./build/index.d.ts",
  "module": "./build/esm/index.js",
  "sideEffects": false,
  "exports": {
    ".": {
      "import": {
        "types": "./build/esm/index.d.ts",
        "default": "./build/esm/index.js"
      },
      "require": {
        "types": "./build/index.d.ts",
        "default": "./build/index.js"
      }
    }
  },
  "license": "MIT",
  "description": "All the power of Heartwood in one, convenient package.",
  "version": "129.0.2",
  "skill": {
    "namespace": "HeartwoodViewControllers",
    "commandOverrides": {
      "sync.schemas": "--shouldFetchCoreSchemas false --moduleToImportFromWhenRemote @sprucelabs/heartwood-view-controllers"
    },
    "upgradeIgnoreList": [
      "@sprucelabs/spruce-test-fixtures",
      "@sprucelabs/spruce-event-plugin",
      "@sprucelabs/spruce-skill-booter"
    ],
    "version": "v2021_02_11"
  },
  "keywords": [
    "node",
    "sprucelabs"
  ],
  "homepage": "https://github.com/sprucelabsai/heartwood-view-controllers",
  "bugs": {
    "url": "https://github.com/sprucelabsai/heartwood-view-controllers/issues"
  },
  "scripts": {
    "boot": "node build/index",
    "boot.local": "node -r ts-node/register -r tsconfig-paths/register ./src/index",
    "build.copy-files": "mkdir -p build && rsync -avzq --exclude='*.ts' ./src/ ./build/",
    "build.ci": "yarn run build.tsc && yarn run build.resolve-paths && yarn run lint",
    "build.dev": "yarn run build.tsc --sourceMap ; yarn run resolve-paths.lint",
    "build.dist": "tsc --project tsconfig.dist.json && yarn build.resolve-paths && mv build esm && yarn build.esm-postbuild && yarn build.tsc && yarn build.resolve-paths && mv esm build/ && yarn clean.dist",
    "build.esm-postbuild": "esm-postbuild --target esm --patterns '**/*.js'",
    "build.resolve-paths": "resolve-path-aliases --target build --patterns '**/*.js,**/*.d.ts'",
    "build.tsc": "yarn build.copy-files && tsc",
    "clean": "yarn run clean.build",
    "clean.all": "yarn run clean.dependencies && yarn run clean.build",
    "clean.build": "rm -rf build/",
    "clean.dependencies": "rm -rf node_modules/ package-lock.json yarn.lock",
    "clean.dist": "rm -rf build/__tests__ build/esm/__tests__",
    "fix.lint": "eslint --fix --cache '**/*.ts'",
    "health": "yarn boot --health",
    "health.local": "yarn boot.local --health",
    "lint": "eslint --cache '**/*.ts'",
    "rebuild": "yarn run clean.all && yarn install && yarn run build.dev",
    "release": "semantic-release",
    "resolve-paths.lint": "yarn run build.resolve-paths ; yarn run lint",
    "test": "NODE_OPTIONS=--trace-deprecation jest --detectOpenHandles",
    "update.dependencies": "yarn run clean.dependencies && yarn",
    "upgrade.packages": "yarn-upgrade-all && rm -f yarn.lock ; yarn ; yarn fix.lint ; true",
    "upgrade.packages.all": "yarn install && yarn upgrade.packages",
    "upgrade.packages.test": "yarn upgrade.packages.all && yarn lint && yarn build.dev && yarn test",
    "watch.rebuild": "yarn run clean.all && yarn install && yarn run watch.build.dev",
    "watch.tsc": "tsc -w",
    "post.watch.build": "yarn run build.copy-files && yarn run build.resolve-paths",
    "watch.build.dev": "tsc-watch --sourceMap --onCompilationComplete 'yarn run post.watch.build'",
    "lint.tsc": "tsc -p . --noEmit"
  },
  "dependencies": {
    "@babel/core": "^7.28.5",
    "@babel/plugin-transform-class-properties": "^7.27.1",
    "@babel/plugin-transform-runtime": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@babel/preset-typescript": "^7.28.5",
    "@babel/runtime": "^7.28.4",
    "@sprucelabs/calendar-utils": "^46.0.1",
    "@sprucelabs/error": "^8.1.2",
    "@sprucelabs/globby": "^2.0.515",
    "@sprucelabs/mercury-core-events": "^29.0.1",
    "@sprucelabs/mercury-types": "^49.1.3",
    "@sprucelabs/schema": "^33.1.3",
    "@sprucelabs/spruce-core-schemas": "^42.1.3",
    "@sprucelabs/spruce-event-utils": "^43.0.1",
    "@sprucelabs/spruce-skill-utils": "^34.0.1",
    "@sprucelabs/test-utils": "^7.2.3",
    "babel-loader": "^10.0.0",
    "babel-plugin-module-resolver": "^5.0.2",
    "dot-prop": "^10.1.0",
    "dotenv": "^17.2.3",
    "esbuild": "^0.27.2",
    "object-set": "^1.0.1",
    "terser-webpack-plugin": "^5.3.16",
    "uglify-js": "^3.19.3",
    "webpack": "^5.104.1"
  },
  "devDependencies": {
    "@regressionproof/cli": "^0.3.4",
    "@regressionproof/jest-reporter": "^0.3.4",
    "@sprucelabs/esm-postbuild": "^9.0.13",
    "@sprucelabs/jest-json-reporter": "^10.0.19",
    "@sprucelabs/mercury-client": "^46.0.1",
    "@sprucelabs/mercury-event-emitter": "^46.0.1",
    "@sprucelabs/resolve-path-aliases": "^4.0.13",
    "@sprucelabs/semantic-release": "^6.0.0",
    "@sprucelabs/test": "^11.1.0",
    "@types/node": "^25.0.3",
    "@types/terser-webpack-plugin": "^5.2.0",
    "chokidar-cli": "^3.0.0",
    "eslint": "^9.39.2",
    "eslint-config-spruce": "^11.2.26",
    "jest": "^30.2.0",
    "jest-circus": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "prettier": "^3.7.4",
    "ts-node": "^10.9.2",
    "tsc-watch": "^7.2.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3",
    "yarn-upgrade-all": "^0.7.5"
  },
  "resolutions": {
    "@pkgr/core": "0.2.9"
  },
  "jest": {
    "testRunner": "jest-circus/runner",
    "setupFilesAfterEnv": [
      "<rootDir>/src/__tests__/support/setup.js"
    ],
    "maxWorkers": 6,
    "testTimeout": 120000,
    "testEnvironment": "jest-environment-jsdom",
    "testPathIgnorePatterns": [
      "<rootDir>/tmp/",
      "<rootDir>/src/",
      "<rootDir>/node_modules/",
      "<rootDir>/build/__tests__/testDirsAndFiles/"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.js?(x)"
    ],
    "moduleNameMapper": {
      "^#spruce/(.*)$": "<rootDir>/build/.spruce/$1"
    },
    "reporters": [
      "default",
      "@regressionproof/jest-reporter"
    ]
  }
}
