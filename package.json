{
  "name": "@sprucelabs/heartwood-view-controllers",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "build/**/*",
    "tsconfig.json"
  ],
  "main": "./build/index.js",
  "types": "./build/index.d.ts",
  "module": "./build/esm/index.js",
  "sideEffects": false,
  "license": "MIT",
  "description": "All the power of Heartwood in one, convenient package.",
  "version": "50.10.15",
  "skill": {
    "namespace": "HeartwoodViewControllers",
    "commandOverrides": {
      "sync.schemas": "--shouldFetchCoreSchemas false --moduleToImportFromWhenRemote @sprucelabs/heartwood-view-controllers"
    },
    "upgradeIgnoreList": [
      "globby",
      "@sprucelabs/spruce-test-fixtures",
      "@sprucelabs/spruce-event-plugin",
      "@swc/core",
      "@sprucelabs/spruce-skill-booter"
    ]
  },
  "keywords": [
    "node",
    "sprucelabs"
  ],
  "homepage": "https://github.com/sprucelabsai/heartwood-view-controllers",
  "bugs": {
    "url": "https://github.com/sprucelabsai/heartwood-view-controllers/issues"
  },
  "scripts": {
    "boot": "node build/index",
    "boot.local": "node -r ts-node/register -r tsconfig-paths/register ./src/index",
    "build": "yarn build.dev",
    "build.copy-files": "mkdir -p build && rsync -avzq --exclude='*.ts' ./src/ ./build/",
    "build.ci": "yarn build.tsc && yarn build.resolve-paths && yarn lint",
    "build.dev": "yarn build.tsc --sourceMap ; yarn resolve-paths.lint",
    "build.dist": "yarn build.tsc && tsc --project tsconfig.dist.json && yarn build.resolve-paths && yarn build.esm-postbuild && yarn clean.dist",
    "build.esm-postbuild": "esm-postbuild --target build/esm --patterns '**/*.js'",
    "build.resolve-paths": "resolve-path-aliases --target build --patterns '**/*.js,**/*.d.ts'",
    "build.tsc": "yarn build.copy-files && tsc",
    "clean": "yarn clean.build",
    "clean.all": "yarn clean.dependencies && yarn clean.build",
    "clean.build": "rm -rf build/",
    "clean.dependencies": "rm -rf node_modules/ package-lock.json yarn.lock",
    "clean.dist": "rm -rf build/__tests__ build/esm/__tests__",
    "fix.lint": "eslint --fix --cache '**/*.ts'",
    "health": "yarn boot --health",
    "health.local": "yarn boot.local --health",
    "lint": "eslint --cache '**/*.ts'",
    "rebuild": "yarn clean.all && yarn && yarn build.dev",
    "release": "semantic-release",
    "resolve-paths.lint": "yarn build.resolve-paths ; yarn lint",
    "test": "jest",
    "update.dependencies": "yarn clean.dependencies && yarn",
    "upgrade.packages": "yarn-upgrade-all && rm -f yarn.lock ; yarn ; yarn fix.lint ; true",
    "upgrade.packages.all": "yarn install && yarn upgrade.packages",
    "upgrade.packages.test": "yarn upgrade.packages.all && yarn lint && yarn build.dev && yarn test",
    "watch.lint": "concurrently 'yarn lint' \"chokidar 'src/**/*' -c 'yarn lint.tsc'\"",
    "watch.rebuild": "yarn clean.all && yarn && yarn watch.build.dev",
    "watch.tsc": "tsc -w",
    "post.watch.build": "yarn build.copy-files && yarn build.resolve-paths",
    "watch.build.dev": "tsc-watch --sourceMap --onCompilationComplete 'yarn post.watch.build'",
    "lint.tsc": "tsc -p . --noEmit"
  },
  "dependencies": {
    "@babel/core": "^7.16.0",
    "@babel/plugin-proposal-class-properties": "^7.16.0",
    "@babel/plugin-transform-runtime": "^7.16.4",
    "@babel/preset-env": "^7.16.4",
    "@babel/preset-typescript": "^7.16.0",
    "@sprucelabs/error": "^5.0.299",
    "@sprucelabs/mercury-core-events": "^1.6.114",
    "@sprucelabs/mercury-types": "^26.1.910",
    "@sprucelabs/schema": "^25.4.24",
    "@sprucelabs/spruce-core-schemas": "^22.6.182",
    "@sprucelabs/spruce-event-utils": "^17.1.180",
    "@sprucelabs/spruce-skill-utils": "^22.0.140",
    "@swc/core": "1.2.103",
    "babel-loader": "^8.2.3",
    "babel-plugin-module-resolver": "^4.1.0",
    "dotenv": "^10.0.0",
    "esbuild": "^0.13.15",
    "globby": "^11.0.4",
    "lodash-es": "^4.17.21",
    "terser-webpack-plugin": "^5.2.5",
    "uglify-js": "^3.14.3",
    "webpack": "^5.64.4"
  },
  "devDependencies": {
    "@sprucelabs/esm-postbuild": "^1.0.290",
    "@sprucelabs/jest-json-reporter": "^6.0.252",
    "@sprucelabs/jest-sheets-reporter": "^1.2.259",
    "@sprucelabs/mercury-client": "^17.1.109",
    "@sprucelabs/mercury-event-emitter": "^17.1.109",
    "@sprucelabs/resolve-path-aliases": "^1.0.230",
    "@sprucelabs/semantic-release": "^4.0.8",
    "@sprucelabs/test": "^7.7.234",
    "@sprucelabs/test-utils": "^3.0.281",
    "@types/lodash": "^4.14.177",
    "@types/node": "^16.11.10",
    "@types/terser-webpack-plugin": "^5.2.0",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^6.4.0",
    "eslint": "^8.3.0",
    "eslint-config-spruce": "^10.10.16",
    "jest": "^27.3.1",
    "jest-circus": "^27.3.1",
    "prettier": "^2.5.0",
    "ts-node": "^10.4.0",
    "tsc-watch": "^4.5.0",
    "tsconfig-paths": "^3.12.0",
    "typescript": "^4.5.2",
    "yarn-upgrade-all": "^0.5.4"
  },
  "engines": {
    "node": ">=12.x",
    "yarn": "1.x"
  },
  "jest": {
    "testRunner": "jest-circus/runner",
    "maxWorkers": 4,
    "testTimeout": 120000,
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "<rootDir>/tmp/",
      "<rootDir>/src/",
      "<rootDir>/node_modules/",
      "<rootDir>/build/__tests__/testDirsAndFiles/"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.js?(x)"
    ],
    "moduleNameMapper": {
      "^#spruce/(.*)$": "<rootDir>/build/.spruce/$1"
    },
    "reporters": [
      "default",
      [
        "@sprucelabs/jest-sheets-reporter",
        {
          "sheetId": "1DoWM7mYgGDa-PJXptLomrZmbIBZiuxS1YiAsRXU2Gm0",
          "worksheetId": 843037832,
          "testMap": {
            "packagerPackages": "I105",
            "canGetVcFactory": "I106",
            "controllersGetIdsSet": "I124"
          }
        }
      ]
    ]
  }
}
