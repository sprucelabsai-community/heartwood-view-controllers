{
  "name": "@sprucelabs/heartwood-view-controllers",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "build/**/*",
    "tsconfig.json"
  ],
  "main": "./build/index.js",
  "types": "./build/index.d.ts",
  "module": "./build/esm/index.js",
  "sideEffects": false,
  "license": "MIT",
  "description": "All the power of Heartwood in one, convenient package.",
  "version": "108.35.2",
  "skill": {
    "namespace": "HeartwoodViewControllers",
    "commandOverrides": {
      "sync.schemas": "--shouldFetchCoreSchemas false --moduleToImportFromWhenRemote @sprucelabs/heartwood-view-controllers"
    },
    "upgradeIgnoreList": [
      "terser-webpack-plugin",
      "webpack",
      "@sprucelabs/spruce-test-fixtures",
      "@sprucelabs/spruce-event-plugin",
      "@sprucelabs/spruce-skill-booter",
      "@swc/core"
    ]
  },
  "keywords": [
    "node",
    "sprucelabs"
  ],
  "homepage": "https://github.com/sprucelabsai/heartwood-view-controllers",
  "bugs": {
    "url": "https://github.com/sprucelabsai/heartwood-view-controllers/issues"
  },
  "scripts": {
    "boot": "node build/index",
    "boot.local": "node -r ts-node/register -r tsconfig-paths/register ./src/index",
    "build": "yarn build.dev",
    "build.copy-files": "mkdir -p build && rsync -avzq --exclude='*.ts' ./src/ ./build/",
    "build.ci": "yarn build.tsc && yarn build.resolve-paths && yarn lint",
    "build.dev": "yarn build.tsc --sourceMap ; yarn resolve-paths.lint",
    "build.dist": "tsc --project tsconfig.dist.json && yarn build.resolve-paths && mv build esm && yarn build.esm-postbuild && yarn build.tsc && yarn build.resolve-paths && mv esm build/ && yarn clean.dist",
    "build.esm-postbuild": "esm-postbuild --target esm --patterns '**/*.js'",
    "build.resolve-paths": "resolve-path-aliases --target build --patterns '**/*.js,**/*.d.ts'",
    "build.tsc": "yarn build.copy-files && tsc",
    "clean": "yarn clean.build",
    "clean.all": "yarn clean.dependencies && yarn clean.build",
    "clean.build": "rm -rf build/",
    "clean.dependencies": "rm -rf node_modules/ package-lock.json yarn.lock",
    "clean.dist": "rm -rf build/__tests__ build/esm/__tests__",
    "fix.lint": "eslint --fix --cache '**/*.ts'",
    "health": "yarn boot --health",
    "health.local": "yarn boot.local --health",
    "lint": "eslint --cache '**/*.ts'",
    "rebuild": "yarn clean.all && yarn && yarn build.dev",
    "release": "semantic-release",
    "resolve-paths.lint": "yarn build.resolve-paths ; yarn lint",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --detectOpenHandles",
    "update.dependencies": "yarn clean.dependencies && yarn",
    "upgrade.packages": "yarn-upgrade-all && rm -f yarn.lock ; yarn ; yarn fix.lint ; true",
    "upgrade.packages.all": "yarn install && yarn upgrade.packages",
    "upgrade.packages.test": "yarn upgrade.packages.all && yarn lint && yarn build.dev && yarn test",
    "watch.lint": "concurrently 'yarn lint' \"chokidar 'src/**/*' -c 'yarn lint.tsc'\"",
    "watch.rebuild": "yarn clean.all && yarn && yarn watch.build.dev",
    "watch.tsc": "tsc -w",
    "post.watch.build": "yarn build.copy-files && yarn build.resolve-paths",
    "watch.build.dev": "tsc-watch --sourceMap --onCompilationComplete 'yarn post.watch.build'",
    "lint.tsc": "tsc -p . --noEmit"
  },
  "dependencies": {
    "@babel/core": "^7.23.7",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-transform-runtime": "^7.23.7",
    "@babel/preset-env": "^7.23.7",
    "@babel/preset-typescript": "^7.23.3",
    "@sprucelabs/calendar-utils": "^39.0.103",
    "@sprucelabs/error": "^5.1.57",
    "@sprucelabs/globby": "^1.0.6",
    "@sprucelabs/mercury-core-events": "^22.1.11",
    "@sprucelabs/mercury-types": "^46.0.170",
    "@sprucelabs/schema": "^29.3.9",
    "@sprucelabs/spruce-core-schemas": "^39.0.175",
    "@sprucelabs/spruce-event-utils": "^38.0.201",
    "@sprucelabs/spruce-skill-utils": "^30.1.60",
    "@sprucelabs/test-utils": "^4.0.95",
    "@swc/core": "1.2.103",
    "babel-loader": "^9.1.3",
    "babel-plugin-module-resolver": "^5.0.0",
    "dot-prop": "^8.0.2",
    "dotenv": "^16.3.1",
    "esbuild": "^0.19.11",
    "object-set": "^1.0.1",
    "terser-webpack-plugin": "5.3.1",
    "uglify-js": "^3.17.4",
    "webpack": "5.70.0"
  },
  "devDependencies": {
    "@sprucelabs/esm-postbuild": "^5.0.120",
    "@sprucelabs/jest-json-reporter": "^7.0.141",
    "@sprucelabs/jest-sheets-reporter": "^3.0.26",
    "@sprucelabs/mercury-client": "^41.0.203",
    "@sprucelabs/mercury-event-emitter": "^41.0.203",
    "@sprucelabs/resolve-path-aliases": "^1.1.275",
    "@sprucelabs/semantic-release": "^4.0.8",
    "@sprucelabs/test": "^8.0.39",
    "@types/node": "^20.10.7",
    "@types/terser-webpack-plugin": "^5.2.0",
    "@wojtekmaj/enzyme-adapter-react-17": "^0.8.0",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^8.2.2",
    "enzyme": "^3.11.0",
    "eslint": "^8.56.0",
    "eslint-config-spruce": "^10.13.6",
    "jest": "^29.7.0",
    "jest-circus": "^29.7.0",
    "jsdom": "^23.2.0",
    "prettier": "^3.1.1",
    "ts-node": "^10.9.2",
    "tsc-watch": "^6.0.4",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3",
    "yarn-upgrade-all": "^0.7.2"
  },
  "jest": {
    "testRunner": "jest-circus/runner",
    "maxWorkers": 6,
    "testTimeout": 120000,
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "<rootDir>/tmp/",
      "<rootDir>/src/",
      "<rootDir>/node_modules/",
      "<rootDir>/build/__tests__/testDirsAndFiles/"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.js?(x)"
    ],
    "moduleNameMapper": {
      "^#spruce/(.*)$": "<rootDir>/build/.spruce/$1"
    }
  }
}
