{
    "compilerOptions": {
        "module": "es2020",
        "target": "es6",
        "lib": [
            "es2020",
            "dom"
        ],
        "skipLibCheck": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "declaration": true,
        "noImplicitAny": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "strict": true,
        "noUnusedLocals": true,
        "resolveJsonModule": true,
        "sourceMap": false,
        "outDir": "./build",
        "baseUrl": "src",
        "experimentalDecorators": true,
        "paths": {
            "#spruce/*": [
                ".spruce/*"
            ]
        }
    },
    "include": [
        "./src/*.ts",
        "./src/**/*.ts"
    ],
    "exclude": [
        "**/node_modules/*",
        "build/*",
        "esm/*"
    ]
}